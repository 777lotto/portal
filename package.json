{
  "name": "portal",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "worker",
    "packages/shared",
    "notification"
  ],
  "scripts": {
    "shared:build": "cd packages/shared && npm run build",
    "shared:dev": "cd packages/shared && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "worker:dev": "cd worker && npm run dev",
    "notification:dev": "cd notification && npm run dev",
    "dev": "concurrently \"npm run shared:dev\" \"npm run worker:dev\" \"npm run frontend:dev\"",
    "build": "npm run shared:build && concurrently \"cd worker && npm run build\" \"cd frontend && npm run build\" \"cd notification && npm run build\"",
    "deploy:worker": "cd worker && npm run deploy",
    "deploy:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
