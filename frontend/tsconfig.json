{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/worker.ts"],
  "references": [{ "path": "../packages/shared" }]
}
